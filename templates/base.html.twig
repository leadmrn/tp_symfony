<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('styles') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    {{render(controller('App\\Controller\\BarController:mainMenu',
        {
            'routeName' : app.request.attributes.get('_route'),
            'category_id' : app.request.attributes.get('id') ?? ''
        }))}}
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <div>
                        {% set _block = block('sidebar') %}
                        {% if block('sidebar') is not empty %}
                            {{ _block|raw }}
                        {% else %}
                            <h2>Sidebar</h2>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-9">
                    <div>
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
