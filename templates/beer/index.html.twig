{% extends 'base.html.twig' %}

{% block title %}{{ beer.name }}{% endblock %}

{% block sidebar %}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bière : {{ beer.name }}</h4>
                <p>Description : {{ beer.description }}</p>
                {% if beer.price  %}
                    <p> Prix : {{ beer.price }}€ </p>
                {% else %}
                    <p>Pas de prix renseigné</p>
                {% endif %}
                <p>Degré : {{ beer.degree }}</p>
                {% if beer.country  %}
                    <p> Pays : {{ beer.country.name }} </p>
                {% else %}
                    <p>Pas de pays renseigné</p>
                {% endif %}
                <p>Categorie normal :</p>
                <ul>
                    {% for category in catNormal  %}
                        <li>{{ category.name }}</li>
                    {% endfor %}
                </ul>
                {% if catSpecial|length >= 2 %}
                    <p>Categories spéciales :</p>
                {% else %}
                    <p>Categorie spéciale :</p>
                {% endif %}
                <ul>
                    {% for category in catSpecial  %}
                        <li>{{ category.name }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
