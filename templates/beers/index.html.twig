{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block sidebar %}{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ title }}</h1>
        {% for beer in beers %}
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">{{ beer.name }}</h4>
                    <p>{{ beer.description }}</p>
                    <p>Publié le {{ beer.publishedAt | date('d/m/Y à h:i:s')}}</p>
                    <p>Prix : {{ beer.price }}</p>
                    <p>Degrée : {{ beer.degree }}</p>

                    {# Affichez les catégories dans lesquelles se trouvent vos bières  #}
                    {% if beer.country  %}
                        <p> Country : {{ beer.country.name}} </p>
                    {% else %}
                        <p>No country</p>
                    {% endif %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
